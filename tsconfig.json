{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "baseUrl": ".",
    "paths": {
      "@ngx-metaui/rules": ["dist/libs/rules", "libs/rules/src/index.ts"],
      "@ngx-metaui/material-rules": ["libs/material-rules/src/index.ts"],
      "@ngx-metaui/fiori-rules": ["libs/fiori-rules/src/index.ts"]
    },
    "rootDir": "."
  },
  "exclude": ["node_modules", "tmp"]
}
